
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <img class="profile-img" src="~/Resources/Ponto.png" width="200" height="200">
                <form class="form-signin">
                    <input type="text" name="Id" class="form-control col-lg-4" placeholder="Digite seu código:" required autofocus>
                    <br />
                    <a class="btn btn-primary btn-block col-lg-4" href="#" onclick="getFuncionario();">
                        Marcar
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function getFuncionario() {
        var url = "@Url.Action("GetFuncionario", "Funcionario")";
        var funcionarioId = $("#Id").value;
        $.post(url, { id: funcionarioId });
       
    }
</script>
